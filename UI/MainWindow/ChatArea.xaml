<DockPanel x:Class="Commons.UI.ChatArea" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="450">
    <DockPanel.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ChatAreaStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </DockPanel.Resources>
    <Border x:Name="ChatBoxBorder" DockPanel.Dock="Bottom" Style="{StaticResource ChatInputBoxBorderStyle}">
        <TextBox x:Name="ChatBox" Style="{StaticResource ChatInputBoxStyle}" PreviewKeyUp="TextBox_KeyUp"/>
    </Border>
    <FlowDocumentScrollViewer x:Name="ChatWindow" Style="{StaticResource ChatDisplayAreaStyle}">
        <FlowDocument />
    </FlowDocumentScrollViewer>
</DockPanel>