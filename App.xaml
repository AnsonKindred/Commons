<Application x:Class="Commons.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UI/Styles/AppStyle.xaml"></ResourceDictionary>
                <ResourceDictionary Source="UI/Styles/CommonStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="DarkestBackgroundColor" Color="#ff202020"/>
            <SolidColorBrush x:Key="DarkerBackgroundColor" Color="#FF2b2d31"/>
            <SolidColorBrush x:Key="DarkBackgroundColor" Color="#FF313338"/>
            <SolidColorBrush x:Key="DefaultTextColor" Color="#FFDFE0E9"/>
            <SolidColorBrush x:Key="DefaultTextboxColor" Color="#FF383a40"/>
            <SolidColorBrush x:Key="MutedTextColor" Color="#FF80848e"/>
            <SolidColorBrush x:Key="PlaceholderTextColor" Color="#FF61626b"/>

            <FontFamily x:Key="DefaultFont" >/Fonts/#gg_sans_Normal</FontFamily>
            <FontFamily x:Key="DefaultFont-Bold" >/Fonts/#gg_sans_Bold</FontFamily>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
