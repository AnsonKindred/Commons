<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:commons="clr-namespace:Commons">
    <DataTemplate x:Key="ServerListEntryTemplate">
        <DataTemplate.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../Styles/SpaceListEntryStyle.xaml"></ResourceDictionary>
                    <ResourceDictionary>
                        <commons:SpaceNameConverter x:Key="serverNameConverter" />
                    </ResourceDictionary>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </DataTemplate.Resources>
        <Border Style="{StaticResource RoundedBorderStyle}">
            <Button Style="{StaticResource ButtonStyle}">
                <TextBlock Style="{StaticResource TextStyle}" Text="{Binding Name, Converter={StaticResource serverNameConverter}}" />
            </Button>
        </Border>
    </DataTemplate>
</ResourceDictionary>