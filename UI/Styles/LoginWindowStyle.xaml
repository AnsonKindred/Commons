<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="CommonStyles.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="NameTextBoxBorder" TargetType="Border" BasedOn="{StaticResource DefaultTextBoxBorder}">
        <Setter Property="BorderThickness" Value="1,1,1,1" />
        <Setter Property="Height" Value="60" />
        <Setter Property="Background" Value="{DynamicResource DefaultTextboxColor}" />
        <Setter Property="CornerRadius" Value="4,4,4,4" />
    </Style>

    <Style x:Key="DefaultTextBox" TargetType="TextBox">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="Margin" Value="0,0,-2,0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="CaretBrush" Value="#FFDFE0E9" />
        <Setter Property="Foreground" Value="{DynamicResource DefaultTextColor}" />
    </Style>
</ResourceDictionary>