<Application x:Class="Commons.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:commons="clr-namespace:Commons"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <SolidColorBrush x:Key="DarkestBackgroundColor" Color="#ff202020"/>
        <SolidColorBrush x:Key="DarkerBackgroundColor" Color="#FF2b2d31"/>
        <SolidColorBrush x:Key="DarkBackgroundColor" Color="#FF313338"/>
        <SolidColorBrush x:Key="DefaultTextColor" Color="#FFDFE0E9"/>
        <SolidColorBrush x:Key="DefaultTextboxColor" Color="#FF3A3A41"/>
        <SolidColorBrush x:Key="MutedTextColor" Color="#FF80848e"/>

        <commons:ServerNameConverter x:Key="serverNameConverter"/>
    </Application.Resources>
</Application>
